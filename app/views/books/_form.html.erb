<%= form_with(model: @book, local: true, class: "form") do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label mb-1" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :description, class: "form-label mb-1" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="actions mt-3 mb-2">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

<hr />

<h3>Bulk Upload</h3>
<%= form_for @book, url: bulk_upload_books_path, class: "form" do |form| %>

  <div class="form-group">
    <%= form.label :file, class: "form-label mb-1" %>
    <%= form.file_field :file, class: "form-control-file", required: true %>
  </div>

  <div class="actions mt-3 mb-2">
    <%= form.submit "Upload CSV", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
